<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/stixchat_margin_4"
    android:layout_marginTop="@dimen/stixchat_margin_8"
    android:layout_marginLeft="@dimen/stixchat_margin_8" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_content_root">
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bubble_left_white"
            android:maxWidth="@dimen/chat_width_item"
            android:text="New Text New Text New Text New Text New Text New Text New Text New Text New Text "
            android:lineSpacingMultiplier="@dimen/chat_text_spacing"
            android:textAppearance="@style/StixChatText.Primary.Light" />
        <ImageView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/content"
            android:visibility="visible"
            android:paddingRight="@dimen/stixchat_margin_16"
            android:paddingLeft="@dimen/stixchat_margin_16"
            android:paddingBottom="@dimen/stixchat_margin_12"
            android:paddingTop="@dimen/stixchat_margin_12" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/item_chat_status_root"
        android:layout_below="@+id/layout_content_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/stixchat_margin_8"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:20"
            android:id="@+id/item_chat_status_tv"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_chat_status_img"
            android:layout_marginRight="@dimen/stixchat_margin_4"
            android:layout_toLeftOf="@+id/item_chat_status_tv"
            android:layout_centerVertical="true"
            android:visibility="gone"   />
    </RelativeLayout>



    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/box_checkk"
        android:padding="@dimen/stixchat_margin_16"/>

</RelativeLayout>